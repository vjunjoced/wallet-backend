{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app": [
        "src/main"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@class/*": [
        "src/class/*"
      ],
      "@pipes/*": [
        "src/pipes/*"
      ],
      "@entity/*": [
        "src/entity/*"
      ],
    },
  },
  "exclude": ["node_modules", "dist"]
}
